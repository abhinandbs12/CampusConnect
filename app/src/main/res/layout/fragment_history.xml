<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"> <TextView
    android:id="@+id/header_history"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Activity"
    android:textSize="28sp"
    android:fontFamily="@font/alfa_slab_one_regular"
    android:textColor="?attr/colorOnSurface"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_empty_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/header_history"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_nav_history"
            app:tint="?attr/colorOutlineVariant"
            android:layout_marginBottom="24dp"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Recent Activity"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your completed tasks and posted doubts will appear here."
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_browse_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Exploring"
            android:layout_marginTop="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_history"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>